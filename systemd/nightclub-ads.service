[Unit]
Description=Nightclub Ads Next.js Application
After=network.target mysql.service

[Service]
Type=simple
User=root
WorkingDirectory=/root/nightclub-ads
Environment=NODE_ENV=production
Environment=PORT=8496
ExecStart=/usr/bin/pnpm run server
Restart=always
RestartSec=10
StandardOutput=append:/root/nightclub-ads/logs/systemd-out.log
StandardError=append:/root/nightclub-ads/logs/systemd-error.log

[Install]
WantedBy=multi-user.target
